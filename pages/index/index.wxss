/**index.wxss**/
.container {
  display: flex;
  overflow: hidden;
}
.flex {
  display: flex;
}
.flex-column {
  display: flex;
  flex-direction: column;
}
.justify-center {
  justify-content: center;
}
.align-center {
  align-items: center;
}
.scroll-left {
  height: 100vh;
  flex: 0 0 20%;
  background-color: #f5f5f5;
}
.scroll-right {
  height: 100vh;
  background-color: #fff;
}
.left-item {
  height: 150rpx;
}
.left-item.active {
  border-left: 6rpx solid blueviolet;
  background-color: #fff;
}
.title {
  padding: 20rpx;
  background-color: #f5f5f5;
  font-weight: bold;
}
.img-w {
  flex: 0 0 150rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.info-img {
  width: 100%;
  height: 100%;
}
.right-item {
  display: flex;
  padding: 20rpx;
}
.info-w {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx;
}